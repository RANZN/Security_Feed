<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.ranzan.securityfeed.model.PostData" />

        <variable
            name="onClick"
            type="com.ranzan.securityfeed.view.listner.PostOnClickListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:elevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/userName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:text="@{item.userName}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_21"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/postDescription"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_15"
                android:hint="content"
                android:text="@{item.postDescription}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_21"
                app:layout_constraintTop_toBottomOf="@id/userName" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/postDescription">

                <Button
                    android:id="@+id/likeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_heart"
                    android:gravity="center"
                    android:onClick="@{()->onClick.onLike()}"
                    android:text="@{String.valueOf(item.likes)}"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/commentBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_comment"
                    android:onClick="@{()->onClick.onComment()}"
                    android:text="@{String.valueOf(item.comments.size())}"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>